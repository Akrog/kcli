FROM alpine:3.10

MAINTAINER Karim Boumedhel <karimboumedhel@gmail.com>

LABEL name="karmab/kcli-kubevirt" \
      maintainer="karimboumedhel@gmail.com" \
      vendor="Karmalabs" \
      version="20.0" \
      release="0" \
      summary="Libvirt/VirtualBox wrapper on steroids" \
      description="Libvirt/VirtualBox wrapper on steroids"

EXPOSE 9000

RUN apk add --update --no-cache g++ gcc libvirt libvirt-dev py-pip python3-dev openssh-client curl-dev openssl-dev libxml2-dev linux-headers libffi-dev bash

# Group the pip installation
RUN pip3 install -U --no-cache-dir kcli
ADD klist.py /usr/bin
RUN chmod o+x /usr/bin/klist.py && touch /i_am_a_container && echo eval \"\$\(register-python-argcomplete kcli\)\" >> /root/.bashrc && apk del g++ gcc libvirt-dev curl-dev libressl-dev libxml2-dev git linux-headers libffi-dev

ENTRYPOINT ["/usr/bin/kcli"]
CMD ["-h"]
