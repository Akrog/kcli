name: {{ plan }} 
on:
  workflow_dispatch:
    inputs:
      RUNNER:
        description: 'Github Action Runner Name'
        required: true
        default: 'ubuntu-latest'
      PLAN:
        description: 'Plan Name -> myCluster <-'
        required: false
        default: 'xxx'
{% for parameter in parameters %}
      {{ parameter|upper }}:
        description: '{{ parameter }}'
        required: false
        default: {{ parameters[parameter] }}
{% endfor %}

jobs:
    requirements:
    runs-on: {% raw %} ${{github.event.inputs.RUNNER}} {% endraw %}

    steps:
      - name: Install kcli
        run: |
          curl https://raw.githubusercontent.com/karmab/kcli/master/install.sh | bash
          # kcli create pool -p /var/lib/libvirt/images default
          # sudo setfacl -m u:$(id -un):rwx /var/lib/libvirt/images

      - uses: actions/checkout@v2
      - run: git pull origin ${GITHUB_REF##*/}

  deploy-plan:
    needs: requirements
    runs-on: {% raw %} ${{github.event.inputs.RUNNER}} {% endraw %}

    steps:
      - name: Deploy kcli plan
        run: |
          kcli create plan --force -f {{ inputfile | default('kcli_plan.yml') }} {{ paramfileline }} {{ parameterline }} {% raw %} ${{github.event.inputs.PLAN}} {% endraw %}
