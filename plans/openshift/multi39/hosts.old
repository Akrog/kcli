# Create an OSEv3 group that contains the master, nodes, etcd, and lb groups.
# The lb group lets Ansible configure HAProxy as the load balancing solution.
# Comment lb out if your load balancer is pre-configured.
[OSEv3:children]
masters
nodes
etcd
lb

[% if masters > 1 %]
[% set lb = 'lb' %]
[% else %]
[% set lb = 'master01' %]
[% endif %]

# Set variables common for all OSEv3 hosts
[OSEv3:vars]
[% if upstream %]
deployment_type=origin
ansible_ssh_user=centos
[% else %]
ansible_ssh_user=cloud-user
deployment_type=openshift-enterprise
[% endif %]
ansible_become=True
openshift_disable_check=disk_availability,docker_storage,memory_availability,docker_image_availability
enable_excluders=false
openshift_release=v[[ openshift_version ]]
openshift_image_tag=[[ openshift_image_tag ]]
openshift_additional_repos=[{'name': 'openshift-origin-candidate', 'baseurl': 'http://cbs.centos.org/repos/paas7-openshift-origin[[ openshift_version ] | replace('.', '') ]-candidate/x86_64/os/', 'enabled': 1, 'gpgcheck': 0,}]

# Uncomment the following to enable htpasswd authentication; defaults to
# DenyAllPasswordIdentityProvider.
openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider', 'filename': '/etc/origin/master/htpasswd'}]

# Native high availbility cluster method with optional load balancer.
# If no lb group is defined installer assumes that a load balancer has
# been preconfigured. For installation the value of
# openshift_master_cluster_hostname must resolve to the load balancer
# or to one or all of the masters defined in the inventory if no load
# balancer is present.
openshift_master_cluster_method=native
openshift_master_cluster_hostname=[[ lb ]].[[ domain ]]
openshift_master_cluster_public_hostname=[[ lb ]].[[ domain ]]
openshift_router_selector="region=master"
openshift_registry_selector="region=master"
os_sdn_network_plugin_name='redhat/openshift-ovs-multitenant'
#openshift_hosted_router_replicas="1"
ansible_service_broker_registry_whitelist=['.*-apb$']
[% if nfs_master %]
openshift_hosted_etcd_storage_kind=nfs
openshift_hosted_etcd_storage_nfs_options="*(rw,root_squash,sync,no_wdelay)"
openshift_hosted_etcd_storage_nfs_directory=/opt/etcd-vol
openshift_hosted_etcd_storage_volume_name=etcd-vol
openshift_hosted_etcd_storage_access_modes=["ReadWriteOnce"]
openshift_hosted_etcd_storage_volume_size=1G
openshift_hosted_etcd_storage_labels={'storage': 'etcd'}
[% endif %]

# apply updated node defaults
openshift_node_kubelet_args={'pods-per-core': ['10'], 'max-pods': ['250'], 'image-gc-high-threshold': ['90'], 'image-gc-low-threshold': ['80']}

# override the default controller lease ttl
#osm_controller_lease_ttl=30

# enable ntp on masters to ensure proper failover
openshift_clock_enabled=true

openshift_hosted_metrics_deploy=false
openshift_master_default_subdomain=apps.[[ domain ]]

[% if nfs_master %]
[nfs]
master01.[[ domain ]]
[% endif %]


# host group for masters
[masters]
[% for master in range(0, masters) %]
master0[[ master +1 ]].[[ domain ]]
[% endfor %]


# host group for etcd
[etcd]
[% for master in range(0, masters) %]
master0[[ master +1 ]].[[ domain ]]
[% endfor %]

# Specify load balancer host
[lb]
[% if masters > 1 %] 
lb.[[ domain ]]
[% endif %]

# host group for nodes, includes region info
[nodes]
[% for master in range(0, masters) %]
master0[[ master +1 ]].[[ domain ]] openshift_node_labels="{'region': 'master', 'zone': 'default'}"
[% endfor %]
[% for node in range(0, nodes) %]
node0[[ node +1 ]].[[ domain ]] openshift_node_labels="{'region': 'primary', 'zone': 'east'}"
[% endfor %]
