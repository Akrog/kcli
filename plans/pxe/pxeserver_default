default menu.c32
prompt 0
timeout 100
ONTIMEOUT 1

menu title ########## PXE Boot Menu ##########

label 1
menu label ^1) Install Distro
menu default
kernel distro/vmlinuz
[% if kickstart %]
append initrd=distro/initrd.img method=http://192.168.127.2 devfs=nomount ks=http://192.168.127.2/ks.cfg
[% else %]
append initrd=distro/initrd.img method=http://192.168.127.2 devfs=nomount
[% endif %]

label 2
menu label ^2) Boot from local drive
localboot 0
