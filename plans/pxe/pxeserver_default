default menu.c32
prompt 0
timeout 300
ONTIMEOUT 1

menu title ########## CentOS 7 PXE Boot Menu ##########

label 1
menu label ^1) Install CentOS 7
menu default
kernel centos7/vmlinuz
[% if kickstart %]
append initrd=centos7/initrd.img method=http://192.168.127.2 devfs=nomount ks=http://192.168.127.2/ks.cfg
[% else %]
append initrd=centos7/initrd.img method=http://192.168.127.2 devfs=nomount
[% endif %]

label 2
menu label ^2) Boot from local drive
localboot 0
